<UserControl x:Class="KilsatMassiks.Raportti"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KilsatMassiks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="mileageDataGrid" AutoGenerateColumns="False" CanUserAddRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                <DataGridTextColumn Header="Kilometers Driven" Binding="{Binding kmDriven}" Width="*" />
                <DataGridTextColumn Header="Compensation Amount" Binding="{Binding korvausMaara}" Width="*" />
                <DataGridTextColumn Header="Driver" Binding="{Binding henkilo}" Width="*" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ToolTip" Value="Double-click to edit" />
                    <Setter Property="IsEnabled" Value="False" />
                    <Setter Property="Background" Value="#EEE" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#DDD" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <Button Content="lisaa" Click="AddRecordButton_Click" Margin="10,197,0,175" HorizontalAlignment="Left" Width="134" RenderTransformOrigin="0.525,0.532"/>
    </Grid>
</UserControl>
